                    <i class="bi bi-brightness-high-fill toggle-icon"></i>
                </div>
            </nav>            
        </div>
    </header>
    <main>
        <section class="section-users">
            <h2>MANAGE USERS</h2>
            <ul class="headers-users">
                <li><span>Name</span><span>Username</span><span>Edit Privileges</span><span>Actions</span></li>
            </ul>
            <ul class="users">
                {{#each users}}
                    <li class="user">
                        <span>{{ displayName }}</span>
                        <span>{{ username }}</span>
                        <span>{{#if canEdit}}✓{{/if}}</span>
                        <span><a href="/users/delete/{{ userID }}" class="btn-admin btn-update">Remove</a> <a href="/users/update/{{ userID }}" class="btn-admin btn-update">Modify</a></span>
                    </li>
                {{/each}}
            </ul>
            <p>
                <a href="/users/create" class="btn-admin btn-create">+ Add New User</a>
            </p>
        </section>
    </main>
    <footer class="container">
        <div class="columns">
            <div class="contacts col-12">
                <span class="prompt">CONTACT ME:</span> <span class="phone">+46 070 9678 449</span> <span class="email">arashtarafar@gmail.com</span> <a href="https://www.linkedin.com/in/arashtarafar/" target="_blank" class="linkedin">linkedin.com/in/arashtarafar</a>
